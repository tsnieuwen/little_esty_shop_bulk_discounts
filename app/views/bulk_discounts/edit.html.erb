<div class="nav-container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <p class="navbar-text"><%= @merchant.name %></p>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Dashboard', merchant_dashboard_index_path, style: 'pull-right' %>
      <%= link_to 'My Items', merchant_items_path(@merchant), style: 'pull-right' %>
      <%= link_to 'My Invoices', merchant_invoices_path(@merchant), style: 'pull-right' %></li>
      <%= link_to 'My Bulk Discounts', merchant_bulk_discounts_path(@merchant), style: 'pull-right' %>
    </ul>
  </nav>
</div>

<body>
  <div class="row">
    <p class='col-12'>Edit Bulk Discount #<%= @bulk_discount.id %> </p>
  </div>

  <%= form_with url: merchant_bulk_discount_path(@merchant, @bulk_discount), method: :patch, local: true do |form| %>
    <%= form.label(:percentage, 'Percentage:') %>
    <%= form.text_field(:percentage, value: (@bulk_discount.percentage * 100), required: true)%><br>

    <%= form.label(:minimum, 'Minimum # of Items:') %>
    <%= form.text_field :minimum, value: @bulk_discount.minimum, required: true%><br>

    <%= form.submit('Save') %>
  <% end %>

</body>
